#!name=自动加入TestFlight
#!desc=自动监控TestFlight名额，一旦有新的名额即刻加入。
#!author=DecoAri[https://github.com/DecoAri], xream[https://github.com/xream]
#!icon=https://gitlab.com/lodepuly/iconlibrary/-/raw/main/App_icon/120px/Loon.png
#!keyword=Jacob

#!openUrl=https://apps.apple.com/app/id899247664
#!tag=定时任务
#!loon_version=3.2.1(749)
#!homepage=https://github.com/luestr/ProxyResource/blob/main/README.md
#!date=2024-10-22 00:22:37
#!input=APP_ID

[Rule]
DOMAIN,testflight.apple.com,PROXY

[Script]
http-request ^https?:\/\/testflight\.apple\.com\/v3\/accounts\/.*\/apps$ script-path=https://github.com/ifflagged/Darwin/raw/main/Modules/JS/Kelee/TF_keys.js, tag=获取账号令牌

http-request ^https://testflight.apple.com/join/(.*) script-path=https://github.com/ifflagged/Darwin/raw/main/Modules/JS/Kelee/TF_keys.js, tag=应用ID捕获

cron "null" script-path=https://github.com/ifflagged/Darwin/raw/main/Modules/JS/Kelee/Auto_join_TF.js, timeout=180, tag=自动加入TF

[MITM]
hostname = testflight.apple.com

