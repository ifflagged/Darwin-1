#!name=自动加入TestFlight
#!desc=自动监控TestFlight名额，一旦有新的名额即刻加入。
#!author=DecoAri[https://github.com/DecoAri],xream[https://github.com/xream]
#!icon=https://raw.githubusercontent.com/luestr/IconResource/main/App_icon/120px/Loon.png
#!keyword=Jacob

#!openUrl=https://apps.apple.com/app/id899247664
#!tag=定时任务
#!loon_version=3.2.4(787)
#!homepage=https://github.com/luestr/ProxyResource/blob/main/README.md
#!date=2025-03-27 00:15:57
#!input=APP_ID

[Rule]
DOMAIN,testflight.apple.com,PROXY

[Script]
http-request ^https?:\/\/testflight\.apple\.com\/v3\/accounts\/.*\/apps$ script-path=https://github.com/ifflagged/Darwin/raw/main/Modules/JS/Kelee/Auto_Join_TF/TF_keys.js, tag=获取账号令牌

http-request ^https://testflight.apple.com/join/(.*) script-path=https://github.com/ifflagged/Darwin/raw/main/Modules/JS/Kelee/Auto_Join_TF/TF_keys.js, tag=应用ID捕获

cron "{TimingParameters}" script-path=https://github.com/ifflagged/Darwin/raw/main/Modules/JS/Kelee/Auto_Join_TF/Auto_join_TF.js, timeout=180, tag=自动加入TF

[MITM]
hostname = testflight.apple.com

